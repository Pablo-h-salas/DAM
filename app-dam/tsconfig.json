{
  "compilerOptions": {
    "target": "es2016",                         
    "module": "commonjs",                        
    "strict": true,                              
    "esModuleInterop": true,                     
    "skipLibCheck": true,                        
    "forceConsistentCasingInFileNames": true,    
    "outDir": "./dist",                         
    "rootDir": "./src",                        
    "resolveJsonModule": true,                  
    "isolatedModules": true,                     
    "noEmit": false,                           
    "declaration": true,                        
    "sourceMap": true                           
  },
  "include": [
    "src/**/*.ts"                             
  ],
  "exclude": [
    "node_modules"                              
  ]
}
